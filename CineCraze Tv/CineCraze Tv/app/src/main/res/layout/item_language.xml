<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_item_language"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_button"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/image_view_item_language"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_language_white_24dp"
        android:contentDescription="Language" />

    <TextView
        android:id="@+id/text_view_item_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="English"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/relative_layout_item_language_indector"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle_indicator"
        android:visibility="gone" />

</LinearLayout>